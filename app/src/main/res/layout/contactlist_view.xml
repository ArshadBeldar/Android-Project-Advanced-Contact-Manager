<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listContactView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="22">

    <ImageView
        android:id="@+id/imgContact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:background="#BF1616"
        android:src="@mipmap/contact"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_weight="2">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Names"
            android:textColor="#BF1616"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/txtMobileNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="MobileNO"
            android:textColor="#3F51B5"
            android:textSize="16sp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgCall"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="5dp"
        android:layout_weight="4"
        app:srcCompat="@mipmap/phonecall">
    </ImageView>

    <ImageView
        android:id="@+id/imgSms"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="5dp"
        android:layout_weight="4"
        app:srcCompat="@mipmap/rectangularsms">
    </ImageView>
    <ImageView
        android:id="@+id/imgEdit"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="5dp"
        android:layout_weight="4"
        app:srcCompat="@android:drawable/ic_menu_edit"></ImageView>
    <ImageView
        android:id="@+id/imgDel"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="5dp"
        android:layout_weight="4"
        android:src="@mipmap/garbage"></ImageView>


</LinearLayout>